<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABE9F1"
    tools:context=".Myprofile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/main_profile_holder"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00F7F9FA">


                <TextView
                    android:id="@+id/Profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bungee"
                    android:text="My Profile"
                    android:textColor="#42C4D5"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/edit" />

                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/main_photo">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="false"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/bungee"
                        android:text="Fullname" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/bungee"
                        android:text="Contact"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/contact"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/bungee"
                        android:text="Email"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/bungee"
                        android:text="Address"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/main_photo"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/profile_photo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="15dp"
                        app:srcCompat="@drawable/avatar" />

                    <ImageView
                        android:id="@+id/camera_photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/profile_photo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="false"
                        android:layout_marginTop="-30dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:srcCompat="@drawable/click" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/camera_photo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bungee"
                        android:text="The Nickname" />


                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/other_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main_profile_holder"
                android:layout_centerInParent="true">


                <androidx.cardview.widget.CardView
                    android:id="@+id/first_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="25dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/secondary_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/labels"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/label1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/bungee"
                                android:text="LEVEL :"
                                android:textColor="#5EC8D6" />


                            <TextView
                                android:id="@+id/label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bungee"
                                android:text="DATE STARTED"
                                android:textColor="#5EC8D6" />

                            <TextView
                                android:id="@+id/label2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label1"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/bungee"
                                android:text="EXP GAUGE :"
                                android:textColor="#5EC8D6" />


                            <TextView
                                android:id="@+id/label3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label2"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:fontFamily="@font/bungee"
                                android:text="EXP NEEDED :"
                                android:textColor="#5EC8D6" />

                            <TextView
                                android:id="@+id/label4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/label3"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginBottom="20dp"
                                android:fontFamily="@font/bungee"
                                android:text="RENDERED HRS :"
                                android:textColor="#5EC8D6" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/variables"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/labels">

                            <TextView
                                android:id="@+id/total_hours_variable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/exp_variable"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/bungee"
                                android:text="00" />

                            <ProgressBar
                                android:id="@+id/level_bar_variable"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/level_variable"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="20dp"
                                android:drawingCacheQuality="high"
                                android:max="100"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_design"
                                android:progressTint="#00BCD4" />

                            <TextView
                                android:id="@+id/level_variable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/started_date"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/bungee"
                                android:text="00" />

                            <TextView
                                android:id="@+id/started_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/bungee"
                                android:text="yyyy-MM-dd" />

                            <TextView
                                android:id="@+id/exp_variable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/level_bar_variable"
                                android:layout_centerVertical="false"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/bungee"
                                android:text="00" />
                        </RelativeLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>